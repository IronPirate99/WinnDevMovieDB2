<!DOCTYPE html><html lang="en"><head><meta charset="UTF-8"><meta name="viewport" content="width=device-width, initial-scale=1.0"><title>MovieDB Home</title><link rel="stylesheet" href="/style.css"><link rel="stylesheet" href="https://www.google.com/search?q=https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"></head><body><!-- Navbar structure from your original files --><header class="navbar"><div class="container"><div class="navbar-header"><a href="/"><h4>MovieDB</h4></a></div><div class="navbar-menu"><ul class="navbar-nav"><li><a href="/">Home</a></li><li><a href="/movies">All Movies</a></li></ul></div></div></header><main class="main-content container"><!-- Featured Movies Panel -->
<h2>Featured Movies</h2>
<div class="movie-panel">
  <% if (featured.length > 0) { %>
    <% featured.forEach(movie => { %>
      <div class="movie-card">
        <a href="/movies/<%= movie._id %>">
          <img src="<%= movie.posterUrl %>" alt="<%= movie.title %> Poster">
          <p><%= movie.title %></p>
        </a>
      </div>
    <% }) %>
  <% } else { %>
    <p class="no-movies">No featured movies found.</p>
  <% } %>
</div>

<!-- Latest Movies Panel -->
<h2>Latest Movies</h2>
<div class="movie-panel">
  <% if (latest.length > 0) { %>
    <% latest.forEach(movie => { %>
      <div class="movie-card">
        <a href="/movies/<%= movie._id %>">
          <img src="<%= movie.posterUrl %>" alt="<%= movie.title %> Poster">
          <p><%= movie.title %></p>
        </a>
      </div>
    <% }) %>
  <% } else { %>
    <p class="no-movies">No latest movies found.</p>
  <% } %>
</div>

<!-- Classics Panel -->
<h2>Classics</h2>
<div class="movie-panel">
  <% if (classics.length > 0) { %>
    <% classics.forEach(movie => { %>
      <div class="movie-card">
        <a href="/movies/<%= movie._id %>">
          <img src="<%= movie.posterUrl %>" alt="<%= movie.title %> Poster">
          <p><%= movie.title %></p>
        </a>
      </div>
    <% }) %>
  <% } else { %>
    <p class="no-movies">No classics found.</p>
  <% } %>
</div>
</main><!-- Script for navbar responsiveness --><script src="/main.js"></script></body></html>