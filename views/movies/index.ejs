<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>MovieDB Home</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>

<h2>Featured Movies</h2>
<div class="movie-panel">
  <% featured.forEach(movie => { %>
    <div class="movie-card">
      <img src="<%= movie.posterUrl %>" alt="<%= movie.title %>">
      <p><%= movie.title %></p>
    </div>
  <% }) %>
</div>

<h2>Latest Movies</h2>
<div class="movie-panel">
  <% latest.forEach(movie => { %>
    <div class="movie-card">
      <img src="<%= movie.posterUrl %>" alt="<%= movie.title %>">
      <p><%= movie.title %></p>
    </div>
  <% }) %>
</div>

<h2>Classics</h2>
<div class="movie-panel">
  <% classics.forEach(movie => { %>
    <div class="movie-card">
      <img src="<%= movie.posterUrl %>" alt="<%= movie.title %>">
      <p><%= movie.title %></p>
    </div>
  <% }) %>
</div>

<script src="/main.js"></script>
</body>
</html>
